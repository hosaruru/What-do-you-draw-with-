<h1>ユーザー検索</h1>
<%= search_form_for @q, url: search_admin_users_path do |f| %>
  <%= f.label :user_name_cont, 'ユーザー名' %>
  <%= f.search_field :user_name_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>



<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-md-8 offset-md-1'>
        <h2>会員一覧</h2>
        <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th colspan="4"></th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                <td><%= link_to user.id, admin_user_path(user.id) %></td>
                <td><%= link_to user.user_name, admin_user_path(user.id) %></td>
                <td><%= user.email %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>
<footer> <%#= paginate @users %></footer>