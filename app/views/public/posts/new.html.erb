<div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
  <h5 class="text-dark bg-light p-4 mb-0">投稿画面</h5>
  <p>
    <%= form_with model: @post,url:posts_path, method: :post do |f| %>
      <div class="container">
        <div class="row">
          <div class="col-4">
            <p>商品画像 <%= f.file_field :image, accept: "image/*", class: "w-100", size: "200x200" %></p>
          </div>
          <div class="col-4">
            <p>
              <%= f.label :software_id, '使用ソフト' %>
              <%= f.collection_select :software_id, Software.all, :id, :software, { prompt: '選択してください' }, class: 'form-control' %>
            </p>
            <p> 紹介文<%= f.text_area :introduction %></p>
            <p>線画<%= f.text_field :brush %></p>
            <p> 
            <%= form_with(model: @post, local: true) do |f| %>
              <div class="pens">
                <div class="mx-auto">
                  <%= f.fields_for :pens do |t| %>
                    <%= render "public/posts/pen_fields", f: t %>
                  <% end %>
                </div>
                <div id="detail-association-insertion-point"></div>
                <div class="col-10 mx-auto mt-2">
                  <%= link_to_add_association "+フォームを追加", f, :pens,
                  class: "btn btn-secondary btn-block",
                  data: {
                  association_insertion_node: '#detail-association-insertion-point',
                  association_insertion_method: 'after'
                  }%>
                </div>
              </div>
            <% end %>
            </p>
            <p>装飾ペン<%= f.text_field :brush %></p>
            <p> コメント（あれば）<%= f.text_area :comments %></p>
            <%#= f.input :twitter, collect: Embed.twitters_i18n.invert, include_blank: false %>
            <%#= f.input :identifier %>
            <p>タグ
              <%= form_with(model: [@tag,@post], local: true) do |f| %>
                <%= f.text_field :tag_name, placeholder: "タグ入力", class: 'uk-input uk-form-small' %>
              <% end %>
            </p>
            <p><%= f.submit "投稿！" ,class: "btn btn-success" %></p>
      <% end %>
      </div>
      </div>

      
    </div>
</div> 

